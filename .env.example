# FoodyLog Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Convex Backend
# Get this URL from your Convex dashboard after running 'bunx convex dev'
VITE_CONVEX_URL=https://your-deployment.convex.cloud

# Clerk Authentication
# Get these from your Clerk dashboard (https://dashboard.clerk.com)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Optional Services
VITE_GOOGLE_PLACES_API_KEY=
VITE_SENTRY_DSN=

# Development Only (Capacitor live reload)
# Replace with your PC IP address for mobile testing
# Common values:
# - Android Emulator: http://10.0.2.2:5173
# - iOS Simulator: http://localhost:5173
# - Physical device: http://YOUR_PC_IP:5173
CAP_SERVER_URL=http://192.168.1.123:5173

# Build Configuration (optional overrides)
# VITE_BUILD_TARGET=web
# VITE_SOURCEMAP=true

# Testing Configuration
# VITE_TEST_MODE=false
# PLAYWRIGHT_BASE_URL=http://localhost:5173