{
  "name": "foodylog",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "The simplest way to remember every meal that matters",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "vitest src/components/ui/__tests__/*.accessibility.test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "audit:accessibility": "bun run scripts/accessibility-audit.ts",
    "audit:colors": "bun run scripts/audit-colors.ts",
    "validate:cross-platform": "bun run scripts/validate-cross-platform.ts",
    "validate:builds": "bun run scripts/validate-builds.ts",
    "validate:cicd": "bun run scripts/validate-cicd.ts",
    "validate:capacitor-live-reload": "bun run scripts/test-capacitor-live-reload.ts",
    "validate:all": "bun run validate:cicd && bun run validate:builds && bun run validate:cross-platform",
    "cap:sync": "bunx cap sync",
    "cap:build": "bun run build && bunx cap sync",
    "cap:android": "bunx cap run android",
    "cap:ios": "bunx cap run ios",
    "cap:android:dev": "bunx cap run android --no-sync",
    "cap:ios:dev": "bunx cap run ios --no-sync",
    "setup": "bun install && cp .env.example .env",
    "clean": "rm -rf dist node_modules .convex android/build ios/build",
    "clean:install": "bun run clean && bun install",
    "dev:full": "concurrently \"bunx convex dev\" \"bun run dev\"",
    "check": "bun run type-check && bun run lint && bun run format:check",
    "check:fix": "bun run type-check && bun run lint:fix && bun run format"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@clerk/backend": "^2.7.0",
    "@clerk/clerk-react": "^5.40.0",
    "@convex-dev/auth": "^0.0.88",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^6.30.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.10",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.5.6",
    "@playwright/test": "^1.54.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vite-plugin-pwa": "^0.17.5",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}